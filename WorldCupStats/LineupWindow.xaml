<Window x:Class="WorldCupStats.WPF.LineupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorldCupStats.WPF"
        mc:Ignorable="d"
        Title="LineupWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#34495E" Padding="15">
            <StackPanel>
                <TextBlock x:Name="txtMatchTitle" Text="Match Lineup" 
                          FontSize="24" FontWeight="Bold" Foreground="White" 
                          HorizontalAlignment="Center"/>
                <TextBlock x:Name="txtMatchInfo" 
                          FontSize="14" Foreground="LightGray" 
                          HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Soccer Pitch -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <!-- Home substitutes -->
                <ColumnDefinition Width="*"/>
                <!-- Pitch -->
                <ColumnDefinition Width="120"/>
                <!-- Away substitutes -->
            </Grid.ColumnDefinitions>

            <!-- Home Substitutes Panel -->
            <Border Grid.Column="0" Background="#1e2a38" Margin="5" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="HOME BENCH" 
                              Foreground="White" FontWeight="Bold" 
                              HorizontalAlignment="Center" 
                              Margin="0,10,0,10"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="pnlHomeSubstitutes" Margin="5"/>
                    </ScrollViewer>
                </Grid>
            </Border>
            <Grid Grid.Column="1" Margin="10">
                <Viewbox Stretch="Uniform">
                <Canvas Width="700" Height="500" x:Name="soccerPitch">
                    <!-- Pitch Background -->
                    <Rectangle Width="700" Height="500" Fill="#4CAF50"/>

                    <!-- Pitch Lines -->
                    <!-- Outer boundary -->
                    <Rectangle Width="680" Height="480" 
                              Canvas.Left="10" Canvas.Top="10"
                              Stroke="White" StrokeThickness="2" Fill="Transparent"/>

                    <!-- Center line x1,2 = width/2, y1 = height - 490 y2 = heigh - 10  -->
                    <Line X1="350" Y1="00" X2="350" Y2="490" 
                          Stroke="White" StrokeThickness="2"/>

                    <!-- Center circle canvas.left ellipse_width/2 = 50 + canvas.left 300   -->
                    <Ellipse Width="100" Height="100" 
                            Canvas.Left="300" Canvas.Top="200" 
                            Stroke="White" StrokeThickness="2" Fill="Transparent"/>

                    <!-- Center spot same we have to get canvas_width/2 which is 346 + ellipse_center_point_width which is 4 -->
                    <Ellipse Width="8" Height="8" 
                            Canvas.Left="346" Canvas.Top="246"
                            Fill="White"/>

                    <!-- Left penalty area  -->
                    <Rectangle Width="120" Height="200" 
                              Canvas.Left="10" Canvas.Top="150"
                              Stroke="White" StrokeThickness="2" Fill="Transparent"/>

                    <!-- Left goal area -->
                    <Rectangle Width="50" Height="100" 
                              Canvas.Left="10" Canvas.Top="200"
                              Stroke="White" StrokeThickness="2" Fill="Transparent"/>

                    <!-- Right penalty area -->
                    <Rectangle Width="120" Height="200" 
                              Canvas.Left="570" Canvas.Top="150"
                              Stroke="White" StrokeThickness="2" Fill="Transparent"/>

                    <!-- Right goal area -->
                    <Rectangle Width="50" Height="100" 
                              Canvas.Left="640" Canvas.Top="200"
                              Stroke="White" StrokeThickness="2" Fill="Transparent"/>

                    <!-- Home Team Side Label -->
                    <TextBlock Text="HOME" FontSize="16" FontWeight="Bold" 
                              Foreground="White" Opacity="0.3"
                              Canvas.Left="150" Canvas.Top="20"/>

                    <!-- Away Team Side Label -->
                    <TextBlock Text="AWAY" FontSize="16" FontWeight="Bold" 
                              Foreground="White" Opacity="0.3"
                              Canvas.Left="500" Canvas.Top="20"/>
                </Canvas>
            </Viewbox>
            </Grid>
            <!-- Away Substitutes Panel -->
            <Border Grid.Column="2" Background="#1e2a38" Margin="5" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="AWAY BENCH" 
                              Foreground="White" FontWeight="Bold" 
                              HorizontalAlignment="Center" 
                              Margin="0,10,0,10"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="pnlAwaySubstitutes" Margin="5"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
        <!-- Team Selection -->
        <Border Grid.Row="2" Background="#34495E" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Home Team -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Home Team: " Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtHomeTeam" Foreground="Yellow" FontWeight="Bold" 
                              VerticalAlignment="Center" Margin="5,0"/>
                    <TextBlock x:Name="txtHomeFormation" Foreground="LightGray" 
                              VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>

                <!-- VS -->
                <TextBlock Grid.Column="1" Text="VS" FontSize="18" FontWeight="Bold" 
                          Foreground="White" Margin="20,0"/>

                <!-- Away Team -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Away Team: " Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtAwayTeam" Foreground="Cyan" FontWeight="Bold" 
                              VerticalAlignment="Center" Margin="5,0"/>
                    <TextBlock x:Name="txtAwayFormation" Foreground="LightGray" 
                              VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
