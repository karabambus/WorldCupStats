<UserControl x:Class="WorldCupStats.WPF.SubstituteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WorldCupStats.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border x:Name="subBorder" CornerRadius="5" BorderThickness="1">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#3a4a5c" Offset="0"/>
                <GradientStop Color="#2a3a4c" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Shirt Number -->
            <Border Grid.Row="0" Background="#1a2a3c" CornerRadius="5,5,0,0">
                <TextBlock x:Name="txtNumber" Text="00" 
                          FontSize="18" FontWeight="Bold" 
                          Foreground="White"
                          HorizontalAlignment="Center" 
                          Margin="0,2"/>
            </Border>

            <!-- Player Name -->
            <TextBlock Grid.Row="1" x:Name="txtName" 
                      Text="Player Name" 
                      FontSize="11" 
                      Foreground="White"
                      TextWrapping="Wrap"
                      TextAlignment="Center"
                      VerticalAlignment="Center"
                      Margin="3"/>

            <!-- Position -->
            <TextBlock Grid.Row="2" x:Name="txtPosition" 
                      Text="POS" 
                      FontSize="10" 
                      Foreground="LightGray"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,2"/>
        </Grid>
    </Border>
</UserControl>
