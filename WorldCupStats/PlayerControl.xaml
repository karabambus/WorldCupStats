<UserControl x:Class="WorldCupStats.WPF.PlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WorldCupStats.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>
        <!-- Player Circle -->
        <Border x:Name="playerBorder" Width="50" Height="50" 
                CornerRadius="25" BorderThickness="2"
                HorizontalAlignment="Center" VerticalAlignment="Top">
            <Border.Background>
                <RadialGradientBrush>
                    <GradientStop Color="#FFE74C3C" Offset="0"/>
                    <GradientStop Color="#FFC0392B" Offset="1"/>
                </RadialGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect BlurRadius="5" Opacity="0.5" ShadowDepth="2"/>
            </Border.Effect>

            <Grid>
                <!-- Player Image Background -->
                <Ellipse Width="46" Height="46">
                    <Ellipse.Fill>
                        <ImageBrush x:Name="playerImageBrush" Stretch="UniformToFill">
                            <ImageBrush.ImageSource>
                                <!-- Default placeholder image -->
                                <BitmapImage UriSource="C:\Users\mradi\OneDrive\Pictures\behemoth.jpg"/>
                            </ImageBrush.ImageSource>
                        </ImageBrush>
                    </Ellipse.Fill>
                </Ellipse>
                <Border Background="#40000000" CornerRadius="25">
                    <Grid>
                        <!-- Shirt Number -->
                        <Border Background="#CC000000" CornerRadius="10" 
                                HorizontalAlignment="Right"  VerticalAlignment="Bottom"
                                Padding="5,2">
                            <TextBlock x:Name="txtNumber" Text="10" 
                                      FontSize="16" FontWeight="Bold" Foreground="White"/>
                        </Border>

                        <!-- Captain Badge -->
                        <Border x:Name="captainBadge" Background="Gold" CornerRadius="8"
                                HorizontalAlignment="Right" VerticalAlignment="Top"
                                Margin="0,2,2,0" Padding="3,1" Visibility="Collapsed">
                            <TextBlock Name="txtCaptain" Text="C" FontSize="8" FontWeight="Bold" Foreground="Black"/>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Player Name -->
        <TextBlock x:Name="txtPlayerName" Text="Player Name" 
                  FontSize="10" Foreground="White" FontWeight="Bold"
                  HorizontalAlignment="Center" VerticalAlignment="Bottom"
                  TextAlignment="Center" TextWrapping="Wrap">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="3" Opacity="0.8" ShadowDepth="1"/>
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</UserControl>
